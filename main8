# ---- –ö—Ä–æ–∫ 1. –ú–æ—Å–∫–∞–ª–µ–Ω–∫–æ –î–º–∏—Ç—Ä–æ ------------------------------------------
# –°—Ç–≤–æ—Ä–µ–Ω–Ω—è —Ç–µ–∫—Å—Ç–æ–≤–æ–≥–æ —Ñ–∞–π–ª—É —Ç–∞ –∑–∞–ø–∏—Å –ø–∏—Ç–∞–Ω–Ω—è
try:
    with open("data.txt", "w", encoding="utf-8") as file:
        file.write("–ú–æ—Å–∫–∞–ª–µ–Ω–∫–æ –î–º–∏—Ç—Ä–æ:\n")
        file.write("–ü–∏—Ç–∞–Ω–Ω—è: –©–æ —Ç–∞–∫–µ —Å–ø–∏—Å–æ–∫ (list) —É Python —ñ —è–∫ –π–æ–≥–æ —Å—Ç–≤–æ—Ä–∏—Ç–∏?\n\n")
    print("‚úÖ –ú–æ—Å–∫–∞–ª–µ–Ω–∫–æ: —Ñ–∞–π–ª —Å—Ç–≤–æ—Ä–µ–Ω–æ —Ç–∞ –∑–∞–ø–∏—Å–∞–Ω–æ.")
except Exception as e:
    print("‚ùå –ü–æ–º–∏–ª–∫–∞ (–ú–æ—Å–∫–∞–ª–µ–Ω–∫–æ):", e)
# ---- –ö—Ä–æ–∫ 2. –ú–∞—Å–ª–∞–∫ –û–ª–µ–∫—Å–∞–Ω–¥—Ä ------------------------------------------
# –î–æ–ø–∏—Å—É—î –≤—ñ–¥–ø–æ–≤—ñ–¥—å –Ω–∞ –ø–∏—Ç–∞–Ω–Ω—è –ú–æ—Å–∫–∞–ª–µ–Ω–∫–∞ —Ç–∞ —Å–≤–æ—î –ø–∏—Ç–∞–Ω–Ω—è
try:
    with open("data.txt", "a", encoding="utf-8") as file:
        file.write("–ú–∞—Å–ª–∞–∫ –û–ª–µ–∫—Å–∞–Ω–¥—Ä:\n")
        file.write("–í—ñ–¥–ø–æ–≤—ñ–¥—å: –°–ø–∏—Å–æ–∫ (list) —É Python ‚Äî —Ü–µ –∑–º—ñ–Ω–Ω–∞ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–∞–Ω–∏—Ö, "
                   "—â–æ –¥–æ–∑–≤–æ–ª—è—î –∑–±–µ—Ä—ñ–≥–∞—Ç–∏ –ø–æ—Å–ª—ñ–¥–æ–≤–Ω—ñ—Å—Ç—å –µ–ª–µ–º–µ–Ω—Ç—ñ–≤. "
                   "–°–ø–∏—Å–æ–∫ —Å—Ç–≤–æ—Ä—é—î—Ç—å—Å—è –∑–∞ –¥–æ–ø–æ–º–æ–≥–æ—é –∫–≤–∞–¥—Ä–∞—Ç–Ω–∏—Ö –¥—É–∂–æ–∫ [].\n")
        file.write("–ü–∏—Ç–∞–Ω–Ω—è: –©–æ —Ç–∞–∫–µ —Å–ª–æ–≤–Ω–∏–∫ (dictionary) —É Python —ñ —è–∫ –π–æ–≥–æ —Å—Ç–≤–æ—Ä–∏—Ç–∏?\n\n")
    print("‚úÖ –ú–∞—Å–ª–∞–∫: –¥–∞–Ω—ñ —É—Å–ø—ñ—à–Ω–æ –¥–æ–¥–∞–Ω–æ.")
except Exception as e:
    print("‚ùå –ü–æ–º–∏–ª–∫–∞ (–ú–∞—Å–ª–∞–∫):", e)
# ---- –ö—Ä–æ–∫ 3. –ö—Ä–∞—Å—É–ª—è –Ü–ª–ª—è ------------------------------------------
# –í—ñ–¥–ø–æ–≤—ñ–¥–∞—î –ú–∞—Å–ª–∞–∫—É —Ç–∞ —Å—Ç–∞–≤–∏—Ç—å –Ω–æ–≤–µ –ø–∏—Ç–∞–Ω–Ω—è
try:
    with open("data.txt", "a", encoding="utf-8") as file:
        file.write("–ö—Ä–∞—Å—É–ª—è –Ü–ª–ª—è:\n")
        file.write("–í—ñ–¥–ø–æ–≤—ñ–¥—å: –°–ª–æ–≤–Ω–∏–∫ (dictionary) ‚Äî —Ü–µ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ –¥–∞–Ω–∏—Ö, "
                   "—â–æ –∑–±–µ—Ä—ñ–≥–∞—î –ø–∞—Ä–∏ –∫–ª—é—á-–∑–Ω–∞—á–µ–Ω–Ω—è. "
                   "–°—Ç–≤–æ—Ä—é—î—Ç—å—Å—è –∑–∞ –¥–æ–ø–æ–º–æ–≥–æ—é —Ñ—ñ–≥—É—Ä–Ω–∏—Ö –¥—É–∂–æ–∫ {} –∞–±–æ —Ñ—É–Ω–∫—Ü—ñ—ó dict().\n")
        file.write("–ü–∏—Ç–∞–Ω–Ω—è: –©–æ —Ç–∞–∫–µ –∫–æ—Ä—Ç–µ–∂ (tuple) —É Python —ñ —á–∏–º –≤—ñ–Ω –≤—ñ–¥—Ä—ñ–∑–Ω—è—î—Ç—å—Å—è –≤—ñ–¥ —Å–ø–∏—Å–∫—É?\n\n")
    print("‚úÖ –ö—Ä–∞—Å—É–ª—è: –≤—ñ–¥–ø–æ–≤—ñ–¥—å —ñ –ø–∏—Ç–∞–Ω–Ω—è –¥–æ–¥–∞–Ω–æ.")
except Exception as e:
    print("‚ùå –ü–æ–º–∏–ª–∫–∞ (–ö—Ä–∞—Å—É–ª—è):", e)
# ---- –ö—Ä–æ–∫ 4. –ë—Ä–µ—á–∫–∞ –î–º–∏—Ç—Ä–æ ------------------------------------------
# –í—ñ–¥–ø–æ–≤—ñ–¥–∞—î –ö—Ä–∞—Å—É–ª—ñ (–æ—Å—Ç–∞–Ω–Ω—ñ–π —Å—Ç—É–¥–µ–Ω—Ç)
try:
    with open("data.txt", "a", encoding="utf-8") as file:
        file.write("–ë—Ä–µ—á–∫–∞ –î–º–∏—Ç—Ä–æ:\n")
        file.write("–í—ñ–¥–ø–æ–≤—ñ–¥—å: –ö–æ—Ä—Ç–µ–∂ (tuple) ‚Äî —Ü–µ –Ω–µ–∑–º—ñ–Ω–Ω–∞ –ø–æ—Å–ª—ñ–¥–æ–≤–Ω—ñ—Å—Ç—å –µ–ª–µ–º–µ–Ω—Ç—ñ–≤. "
                   "–í—ñ–Ω —Å—Ö–æ–∂–∏–π –Ω–∞ —Å–ø–∏—Å–æ–∫, –∞–ª–µ –π–æ–≥–æ –Ω–µ –º–æ–∂–Ω–∞ –∑–º—ñ–Ω—é–≤–∞—Ç–∏ –ø—ñ—Å–ª—è —Å—Ç–≤–æ—Ä–µ–Ω–Ω—è. "
                   "–°—Ç–≤–æ—Ä—é—î—Ç—å—Å—è –∑–∞ –¥–æ–ø–æ–º–æ–≥–æ—é –∫—Ä—É–≥–ª–∏—Ö –¥—É–∂–æ–∫ ().\n")
    print("‚úÖ –ë—Ä–µ—á–∫–∞: –≤—ñ–¥–ø–æ–≤—ñ–¥—å —É—Å–ø—ñ—à–Ω–æ –¥–æ–¥–∞–Ω–æ.")
except Exception as e:
    print("‚ùå –ü–æ–º–∏–ª–∫–∞ (–ë—Ä–µ—á–∫–∞):", e)
# ---- –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É ------------------------------------------
# –í–∏–≤–µ–¥–µ–Ω–Ω—è –≤–º—ñ—Å—Ç—É —Ñ–∞–π–ª—É –ø—ñ—Å–ª—è –∑–∞–≤–µ—Ä—à–µ–Ω–Ω—è —Ä–æ–±–æ—Ç–∏ –≤—Å—ñ—Ö —Å—Ç—É–¥–µ–Ω—Ç—ñ–≤
try:
    with open("data.txt", "r", encoding="utf-8") as file:
        print("\nüìÑ –í–º—ñ—Å—Ç —Ñ–∞–π–ª—É data.txt:")
        print("-------------------------------------------")
        print(file.read())
except Exception as e:
    print("‚ùå –ü–æ–º–∏–ª–∫–∞ –ø—Ä–∏ —á–∏—Ç–∞–Ω–Ω—ñ —Ñ–∞–π–ª—É:", e)
